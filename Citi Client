<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Citi Client</title>

  <!-- Try to pick up your site's existing CSS if present. Missing files won't break the page. -->
  <link rel="stylesheet" href="css/style.css">
  <link rel="stylesheet" href="css/main.css">
  <link rel="stylesheet" href="css/site.css">

  <style>
    /* Namespaced so we don't fight your global CSS */
    .slides-page {
      background: #f5f5f5;
      min-height: 100vh;
      font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
    }
    .slides-page .wrap {
      max-width: 960px;
      margin: 0 auto;
      padding: 24px;
      display: flex;
      flex-direction: column;
      gap: 24px;
    }
    .slides-page .card {
      background: #fff;
      padding: 16px;
      box-shadow: 0 1px 6px rgba(0,0,0,.08);
      border-radius: 12px;
    }
    .slides-page .card img {
      width: 100%;
      height: auto;
      display: block;
    }
    @media print {
      .slides-page { background: #fff; }
      .slides-page .wrap { max-width: none; padding: 0; gap: 0; }
      .slides-page .card { box-shadow: none; border-radius: 0; padding: 0; page-break-after: always; }
      .slides-page .card:last-child { page-break-after: auto; }
    }
  </style>
</head>
<body class="slides-page">
  <main class="wrap" id="slides"></main>

  <script>
    // CONFIG: set your folder where 1.png ... 37.png live.
    // Default expects /images/slides/1.png etc relative to this file.
    const IMAGE_DIR = "images/slides";

    const container = document.getElementById('slides');
    for (let i = 1; i <= 37; i++) {
      const card = document.createElement('div');
      card.className = 'card';
      const img = document.createElement('img');
      img.loading = 'lazy';
      img.src = `${IMAGE_DIR}/${i}.png`;
      img.alt = `Slide ${i}`;
      card.appendChild(img);
      container.appendChild(card);
    }
  </script>
</body>
</html>
